extends layout

block content
  .row
    .col-lg-6
      .shortcuts
        table.table.table-striped
          thead
            tr
              th Shortcut Keys
              th Action
          tbody
            tr
              td CTRL + 1
              td Pause/Resume Video
            tr
              td CTRL + 2
              td Skip back 5 seconds
            tr
              td CTRL + 3
              td Skip forward 5 seconds
    .col-lg-6
      .shortcuts
        table.table.table-striped
          thead
            tr
              th Shortcut Keys
              th Action
          tbody
            tr
              td CTRL + 4
              td Slowdown Video
            tr
              td CTRL + 5
              td Speedup Video
            tr
              td CTRL + Shift + S
              td Save Current Caption

  .row.text-center.search-bar
    .col-lg-12.input-space
      input#link-value.input-lg.form-control.text-center(type="text", placeholder="Paste the Video's URL here", data-ng-model="videoUrl")

  .row.text-center.main-button
    .lg-col-12
      input#the-button.btn.btn-primary(type="submit", value="Click to Get Video", data-ng-click="onSearch()")

  .row
    .col-lg-9
      .text-center.video-main
        #player
        #overlay
        #subtitles
          h3
    .col-lg-3
      .text-left
        .prev-head
          h5 Previous Subtitle
          p
            span.prev-start
            |-
            span.prev-end
      .text-center
        textarea.input-lg.mousetrap.sub-prev(rows="5", cols="50", readonly="readonly")
      .text-left
        .edit-head
          h5 Current Subtitle
          p
            span.edit-start
            |-
            span.edit-end
      .text-center
        textarea.input-lg.mousetrap.sub-edit(rows="5", cols="50")
      .text-left
        .next-head
          h5 Next Subtitle
          p
            span.next-start
            |-
            span.next-end
      .text-center
        textarea.input-lg.mousetrap.sub-next(rows="5", cols="50", readonly="readonly")